{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "lib": [],
    "preserveValueImports": false,
    "paths": {
      "@/*": [ "src/*" ]
    },
    "types": ["node", "jsdom", "element-plus", "@intlify/vite-plugin-vue-i18n/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/icons/index.js"  ],
  "exclude": [
    "node_modules"
  ]
}
